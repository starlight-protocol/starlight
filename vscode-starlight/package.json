{
    "name": "starlight-protocol",
    "displayName": "Starlight Protocol",
    "description": "IntelliSense, syntax highlighting, and debugging for the Starlight Protocol autonomous browser automation framework",
    "version": "0.1.0",
    "publisher": "starlight-protocol",
    "icon": "assets/icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/starlight-protocol/starlight"
    },
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets",
        "Debuggers",
        "Testing"
    ],
    "keywords": [
        "starlight",
        "browser automation",
        "testing",
        "sentinel",
        "playwright"
    ],
    "activationEvents": [
        "onLanguage:javascript",
        "onLanguage:typescript",
        "onLanguage:python",
        "workspaceContains:**/config.json",
        "workspaceContains:**/sentinels/*.py"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "starlight-warp",
                "aliases": [
                    "Starlight Warp",
                    "warp"
                ],
                "extensions": [
                    ".warp"
                ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "starlight-intent",
                "aliases": [
                    "Starlight Intent"
                ],
                "extensions": [
                    ".intent.js",
                    ".intent.ts"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "starlight-warp",
                "scopeName": "source.warp",
                "path": "./syntaxes/warp.tmLanguage.json"
            },
            {
                "scopeName": "source.starlight.injection",
                "path": "./syntaxes/starlight-injection.tmLanguage.json",
                "injectTo": [
                    "source.js",
                    "source.ts"
                ]
            }
        ],
        "snippets": [
            {
                "language": "javascript",
                "path": "./snippets/starlight-js.json"
            },
            {
                "language": "python",
                "path": "./snippets/starlight-python.json"
            }
        ],
        "commands": [
            {
                "command": "starlight.startHub",
                "title": "Start Hub",
                "category": "Starlight"
            },
            {
                "command": "starlight.stopHub",
                "title": "Stop Hub",
                "category": "Starlight"
            },
            {
                "command": "starlight.runMission",
                "title": "Run Mission",
                "category": "Starlight"
            },
            {
                "command": "starlight.openMissionControl",
                "title": "Open Mission Control",
                "category": "Starlight"
            },
            {
                "command": "starlight.createSentinel",
                "title": "Create New Sentinel",
                "category": "Starlight"
            },
            {
                "command": "starlight.openTriage",
                "title": "Open Time-Travel Triage",
                "category": "Starlight"
            }
        ],
        "configuration": {
            "title": "Starlight Protocol",
            "properties": {
                "starlight.hubUrl": {
                    "type": "string",
                    "default": "ws://localhost:8080",
                    "description": "WebSocket URL for the Starlight Hub"
                },
                "starlight.missionControlUrl": {
                    "type": "string",
                    "default": "http://localhost:3000",
                    "description": "URL for Mission Control UI"
                },
                "starlight.autoStartHub": {
                    "type": "boolean",
                    "default": false,
                    "description": "Automatically start Hub when opening a Starlight project"
                },
                "starlight.headless": {
                    "type": "boolean",
                    "default": false,
                    "description": "Run browser in headless mode"
                },
                "starlight.browser": {
                    "type": "string",
                    "default": "chromium",
                    "enum": [
                        "chromium",
                        "firefox",
                        "webkit"
                    ],
                    "description": "Browser engine to use"
                }
            }
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "starlight-explorer",
                    "title": "Starlight Protocol",
                    "icon": "assets/starlight-icon.svg"
                }
            ]
        },
        "views": {
            "starlight-explorer": [
                {
                    "id": "starlight-sentinels",
                    "name": "Sentinels"
                },
                {
                    "id": "starlight-missions",
                    "name": "Missions"
                },
                {
                    "id": "starlight-hub",
                    "name": "Hub Status"
                }
            ]
        },
        "menus": {
            "editor/context": [
                {
                    "when": "resourceFilename =~ /\\.intent\\.(js|ts)$/",
                    "command": "starlight.runMission",
                    "group": "starlight"
                }
            ],
            "explorer/context": [
                {
                    "when": "resourceFilename =~ /\\.intent\\.(js|ts)$/",
                    "command": "starlight.runMission",
                    "group": "starlight"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js",
        "package": "vsce package"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "@types/vscode": "^1.85.0",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "eslint": "^8.0.0",
        "typescript": "^5.3.0",
        "@vscode/vsce": "^2.22.0"
    },
    "dependencies": {
        "ws": "^8.14.0"
    }
}