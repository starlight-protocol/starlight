{
    "Create Intent Runner": {
        "prefix": "starlightRunner",
        "body": [
            "const { IntentRunner } = require('${1:../sdk/intent_runner}');",
            "",
            "(async () => {",
            "    const runner = new IntentRunner('${2:ws://localhost:8080}');",
            "    await runner.ready();",
            "",
            "    try {",
            "        await runner.goto('${3:https://example.com}');",
            "        $0",
            "        await runner.finish();",
            "    } catch (error) {",
            "        console.error('Mission failed:', error);",
            "        process.exit(1);",
            "    }",
            "})();"
        ],
        "description": "Create a new Starlight IntentRunner mission"
    },
    "Click Goal": {
        "prefix": "clickGoal",
        "body": "await runner.clickGoal('${1:Button Text}');",
        "description": "Click an element by semantic goal"
    },
    "Fill Goal": {
        "prefix": "fillGoal",
        "body": "await runner.fillGoal('${1:Field Label}', '${2:value}');",
        "description": "Fill an input by semantic goal"
    },
    "Select Goal": {
        "prefix": "selectGoal",
        "body": "await runner.selectGoal('${1:Dropdown Label}', '${2:Option Text}');",
        "description": "Select a dropdown option by semantic goal"
    },
    "Goto URL": {
        "prefix": "goto",
        "body": "await runner.goto('${1:https://example.com}');",
        "description": "Navigate to a URL"
    },
    "Wait for Stability": {
        "prefix": "wait",
        "body": "await runner.wait(${1:1000});",
        "description": "Wait for a specified duration"
    },
    "Scroll to Bottom": {
        "prefix": "scrollBottom",
        "body": "await runner.scrollToBottom();",
        "description": "Scroll to the bottom of the page"
    },
    "Press Key": {
        "prefix": "press",
        "body": "await runner.press('${1:Enter}');",
        "description": "Press a keyboard key"
    },
    "Type Text": {
        "prefix": "type",
        "body": "await runner.type('${1:text to type}');",
        "description": "Type text character by character"
    },
    "Upload File": {
        "prefix": "upload",
        "body": "await runner.uploadGoal('${1:File Input}', '${2:/path/to/file}');",
        "description": "Upload a file by semantic goal"
    },
    "Checkpoint": {
        "prefix": "checkpoint",
        "body": [
            "// Checkpoint: ${1:Description}",
            "console.log('[CHECKPOINT] ${1:Description}');"
        ],
        "description": "Add a checkpoint marker"
    },
    "Full Mission Template": {
        "prefix": "starlightMission",
        "body": [
            "/**",
            " * ${1:Mission Description}",
            " * ",
            " * @mission ${2:mission-name}",
            " * @author ${3:Author}",
            " */",
            "",
            "const { IntentRunner } = require('../sdk/intent_runner');",
            "",
            "(async () => {",
            "    const runner = new IntentRunner('ws://localhost:8080');",
            "    await runner.ready();",
            "",
            "    try {",
            "        // Navigate to target",
            "        await runner.goto('${4:https://example.com}');",
            "",
            "        // Mission steps",
            "        $0",
            "",
            "        // Complete mission",
            "        await runner.finish();",
            "        console.log('✅ Mission completed successfully');",
            "    } catch (error) {",
            "        console.error('❌ Mission failed:', error);",
            "        process.exit(1);",
            "    }",
            "})();"
        ],
        "description": "Full Starlight mission template with documentation"
    }
}