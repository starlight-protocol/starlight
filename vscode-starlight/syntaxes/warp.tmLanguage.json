{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Starlight Warp",
    "scopeName": "source.warp",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#sections"
        },
        {
            "include": "#properties"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.starlight",
                    "match": "#.*$"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.double.starlight",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "name": "constant.character.escape.starlight",
                            "match": "\\\\."
                        }
                    ]
                },
                {
                    "name": "string.quoted.single.starlight",
                    "begin": "'",
                    "end": "'",
                    "patterns": [
                        {
                            "name": "constant.character.escape.starlight",
                            "match": "\\\\."
                        }
                    ]
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.starlight",
                    "match": "\\b\\d+(\\.\\d+)?\\b"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.starlight",
                    "match": "\\b(warp|version|timestamp|encrypted)\\b"
                },
                {
                    "name": "constant.language.boolean.starlight",
                    "match": "\\b(true|false|null)\\b"
                }
            ]
        },
        "sections": {
            "patterns": [
                {
                    "name": "entity.name.section.starlight",
                    "match": "^\\s*\\[([^\\]]+)\\]",
                    "captures": {
                        "1": {
                            "name": "entity.name.tag.starlight"
                        }
                    }
                }
            ]
        },
        "properties": {
            "patterns": [
                {
                    "name": "variable.other.property.starlight",
                    "match": "^\\s*([a-zA-Z_][a-zA-Z0-9_]*)\\s*:",
                    "captures": {
                        "1": {
                            "name": "support.type.property-name.starlight"
                        }
                    }
                }
            ]
        }
    }
}