{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://starlight-protocol.github.io/schemas/starlight.finish.schema.json",
    "title": "starlight.finish",
    "description": "Signal to terminate the mission and generate report",
    "type": "object",
    "properties": {
        "jsonrpc": {
            "const": "2.0"
        },
        "method": {
            "const": "starlight.finish"
        },
        "params": {
            "type": "object",
            "properties": {
                "reason": {
                    "type": "string",
                    "description": "Reason for mission completion (e.g., 'Mission complete', 'User cancelled')"
                },
                "error": {
                    "type": "string",
                    "description": "Error message if mission failed"
                },
                "force": {
                    "type": "boolean",
                    "description": "Whether to force immediate shutdown without cleanup"
                }
            }
        },
        "id": {
            "type": "string"
        }
    },
    "required": [
        "jsonrpc",
        "method",
        "id"
    ]
}