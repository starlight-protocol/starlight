{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://starlight-protocol.github.io/schemas/starlight.context.schema.json",
    "title": "starlight.context",
    "description": "Sovereign state update broadcast to share context across layers",
    "type": "object",
    "properties": {
        "jsonrpc": {
            "const": "2.0"
        },
        "method": {
            "const": "starlight.context"
        },
        "params": {
            "type": "object",
            "properties": {
                "context": {
                    "type": "object",
                    "description": "Shared context data (key-value pairs)",
                    "additionalProperties": true
                },
                "source": {
                    "type": "string",
                    "description": "Which layer updated the context"
                }
            },
            "required": [
                "context"
            ]
        },
        "id": {
            "type": "string"
        }
    },
    "required": [
        "jsonrpc",
        "method",
        "params",
        "id"
    ]
}