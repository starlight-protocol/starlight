{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://starlight-protocol.github.io/schemas/starlight.hijack.schema.json",
    "title": "starlight.hijack",
    "description": "Request from Sentinel to take exclusive control of the browser",
    "type": "object",
    "properties": {
        "jsonrpc": {
            "const": "2.0"
        },
        "method": {
            "const": "starlight.hijack"
        },
        "params": {
            "type": "object",
            "properties": {
                "reason": {
                    "type": "string",
                    "description": "Reason for hijack (e.g., 'Cookie popup detected', 'Modal blocking')"
                },
                "obstacle": {
                    "type": "string",
                    "description": "Selector or identifier of the obstacle being addressed"
                },
                "estimatedDuration": {
                    "type": "integer",
                    "minimum": 0,
                    "description": "Estimated time to clear obstacle in milliseconds"
                }
            },
            "required": [
                "reason"
            ]
        },
        "id": {
            "type": "string"
        }
    },
    "required": [
        "jsonrpc",
        "method",
        "params",
        "id"
    ]
}