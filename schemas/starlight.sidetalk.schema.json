{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://starlight-protocol.github.io/schemas/starlight.sidetalk.schema.json",
    "title": "Starlight Side-Talk",
    "description": "Inter-Sentinel communication protocol - Phase 17",
    "type": "object",
    "properties": {
        "jsonrpc": {
            "const": "2.0"
        },
        "method": {
            "const": "starlight.sidetalk"
        },
        "params": {
            "type": "object",
            "properties": {
                "from": {
                    "type": "string",
                    "description": "Sender Sentinel name"
                },
                "to": {
                    "oneOf": [
                        {
                            "type": "string",
                            "description": "Target Sentinel name for direct message"
                        },
                        {
                            "const": "*",
                            "description": "Broadcast to all Sentinels"
                        }
                    ]
                },
                "topic": {
                    "type": "string",
                    "enum": [
                        "environment_state",
                        "capability_query",
                        "capability_response",
                        "action_proposal",
                        "action_vote",
                        "context_share",
                        "heartbeat",
                        "custom"
                    ],
                    "description": "Message topic for routing"
                },
                "payload": {
                    "type": "object",
                    "description": "Message payload (topic-specific)"
                },
                "replyTo": {
                    "type": "string",
                    "description": "Message ID to reply to (for request-reply pattern)"
                },
                "ttl": {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 60000,
                    "default": 5000,
                    "description": "Time-to-live in milliseconds"
                }
            },
            "required": [
                "from",
                "to",
                "topic",
                "payload"
            ]
        },
        "id": {
            "type": "string",
            "description": "Message ID for tracking"
        }
    },
    "required": [
        "jsonrpc",
        "method",
        "params"
    ],
    "definitions": {
        "environmentStatePayload": {
            "type": "object",
            "properties": {
                "stable": {
                    "type": "boolean"
                },
                "mutationRate": {
                    "type": "number"
                },
                "networkIdle": {
                    "type": "boolean"
                },
                "timestamp": {
                    "type": "string"
                }
            }
        },
        "capabilityQueryPayload": {
            "type": "object",
            "properties": {
                "capabilities": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "actionVotePayload": {
            "type": "object",
            "properties": {
                "proposalId": {
                    "type": "string"
                },
                "vote": {
                    "enum": [
                        "approve",
                        "reject",
                        "abstain"
                    ]
                },
                "reason": {
                    "type": "string"
                }
            }
        }
    }
}