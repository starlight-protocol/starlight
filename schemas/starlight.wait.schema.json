{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://starlight-protocol.github.io/schemas/starlight.wait.schema.json",
    "title": "starlight.wait",
    "description": "Stability veto from Sentinel requesting Hub to delay action",
    "type": "object",
    "properties": {
        "jsonrpc": {
            "const": "2.0"
        },
        "method": {
            "const": "starlight.wait"
        },
        "params": {
            "type": "object",
            "properties": {
                "reason": {
                    "type": "string",
                    "description": "Why the wait is requested (e.g., 'DOM unstable', 'High entropy')"
                },
                "retryAfterMs": {
                    "type": "integer",
                    "minimum": 100,
                    "maximum": 30000,
                    "description": "Suggested delay before retry in milliseconds"
                },
                "entropy": {
                    "type": "number",
                    "minimum": 0,
                    "description": "Current entropy reading"
                },
                "mutationRate": {
                    "type": "number",
                    "minimum": 0,
                    "description": "Current DOM mutation rate"
                }
            },
            "required": [
                "retryAfterMs"
            ]
        },
        "id": {
            "type": "string"
        }
    },
    "required": [
        "jsonrpc",
        "method",
        "params",
        "id"
    ]
}