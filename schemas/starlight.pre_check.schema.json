{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://starlight-protocol.github.io/schemas/starlight.pre_check.schema.json",
    "title": "starlight.pre_check",
    "description": "Pre-execution handshake from Hub to Sentinels before executing a command",
    "type": "object",
    "properties": {
        "jsonrpc": {
            "const": "2.0"
        },
        "method": {
            "const": "starlight.pre_check"
        },
        "params": {
            "type": "object",
            "properties": {
                "command": {
                    "type": "object",
                    "description": "The command about to be executed",
                    "properties": {
                        "cmd": {
                            "type": "string"
                        },
                        "selector": {
                            "type": "string"
                        },
                        "goal": {
                            "type": "string"
                        },
                        "url": {
                            "type": "string"
                        }
                    }
                },
                "blocking": {
                    "type": "array",
                    "description": "Array of detected blocking elements",
                    "items": {
                        "type": "object",
                        "properties": {
                            "selector": {
                                "type": "string"
                            },
                            "id": {
                                "type": "string"
                            },
                            "className": {
                                "type": "string"
                            },
                            "display": {
                                "type": "string"
                            },
                            "rect": {
                                "type": "string"
                            },
                            "inShadow": {
                                "type": "boolean"
                            }
                        }
                    }
                },
                "targetRect": {
                    "type": [
                        "object",
                        "null"
                    ],
                    "description": "Bounding rect of target element for overlap detection",
                    "properties": {
                        "x": {
                            "type": "number"
                        },
                        "y": {
                            "type": "number"
                        },
                        "width": {
                            "type": "number"
                        },
                        "height": {
                            "type": "number"
                        }
                    }
                },
                "screenshot": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "description": "Base64-encoded JPEG screenshot for vision analysis"
                },
                "page_text": {
                    "type": "string",
                    "description": "Page text content for PII detection"
                }
            },
            "required": [
                "command",
                "blocking"
            ]
        },
        "id": {
            "type": "string"
        }
    },
    "required": [
        "jsonrpc",
        "method",
        "params",
        "id"
    ]
}