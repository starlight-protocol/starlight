{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://starlight-protocol.github.io/schemas/starlight.clear.schema.json",
    "title": "starlight.clear",
    "description": "All-clear signal from Sentinel to Hub indicating environment is safe to proceed",
    "type": "object",
    "properties": {
        "jsonrpc": {
            "const": "2.0"
        },
        "method": {
            "const": "starlight.clear"
        },
        "params": {
            "type": "object",
            "properties": {
                "reason": {
                    "type": "string",
                    "description": "Optional reason for clearing (e.g., 'DOM stable', 'No obstacles')"
                },
                "entropy": {
                    "type": "number",
                    "minimum": 0,
                    "description": "Current entropy/stability score"
                },
                "mutationRate": {
                    "type": "number",
                    "minimum": 0,
                    "description": "DOM mutations per second"
                }
            }
        },
        "id": {
            "type": "string"
        }
    },
    "required": [
        "jsonrpc",
        "method",
        "id"
    ]
}