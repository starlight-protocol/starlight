{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://starlight-protocol.github.io/schemas/starlight.resume.schema.json",
    "title": "starlight.resume",
    "description": "Signal from Sentinel returning control to Hub after hijack",
    "type": "object",
    "properties": {
        "jsonrpc": {
            "const": "2.0"
        },
        "method": {
            "const": "starlight.resume"
        },
        "params": {
            "type": "object",
            "properties": {
                "success": {
                    "type": "boolean",
                    "description": "Whether the obstacle was successfully cleared"
                },
                "action_taken": {
                    "type": "string",
                    "description": "Description of remediation action taken"
                },
                "re_check": {
                    "type": "boolean",
                    "description": "Whether Hub should re-run pre_check before proceeding"
                },
                "duration": {
                    "type": "integer",
                    "minimum": 0,
                    "description": "Time spent on remediation in milliseconds"
                }
            }
        },
        "id": {
            "type": "string"
        }
    },
    "required": [
        "jsonrpc",
        "method",
        "id"
    ]
}