{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://starlight-protocol.github.io/schemas/starlight.checkpoint.schema.json",
    "title": "starlight.checkpoint",
    "description": "Logical milestone marker in the mission trace",
    "type": "object",
    "properties": {
        "jsonrpc": {
            "const": "2.0"
        },
        "method": {
            "const": "starlight.checkpoint"
        },
        "params": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "description": "Checkpoint name (e.g., 'Login Complete', 'Form Submitted')",
                    "minLength": 1
                },
                "data": {
                    "type": "object",
                    "description": "Optional data to record with checkpoint",
                    "additionalProperties": true
                }
            },
            "required": [
                "name"
            ]
        },
        "id": {
            "type": "string"
        }
    },
    "required": [
        "jsonrpc",
        "method",
        "params",
        "id"
    ]
}